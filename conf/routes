# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /agendas                    controllers.AgendasController.list(request: Request)
GET     /agendas/:date              controllers.AgendasController.find(date: String, request: Request)
POST    /agendas                    controllers.AgendasController.save(request: Request)
PUT     /agendas/:id                controllers.AgendasController.update(id: String, request: Request)
GET     /citas                      controllers.CitasController.list(request: Request)
GET     /citas/:id                  controllers.CitasController.find(id: String, request: Request)
POST    /citas                      controllers.CitasController.save(request: Request)
PUT     /citas/:id                  controllers.CitasController.update(id: String, request: Request)
DELETE  /citas/:id                  controllers.CitasController.delete(id: String, request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
